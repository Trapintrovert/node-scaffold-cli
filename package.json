{
  "name": "node-scaffold-cli",
  "version": "1.0.3",
  "description": "CLI tool to generate OOP structure with DI for Node.js projects (Knex/Objection ORM or Mongoose ODM)",
  "main": "dist/index.js",
  "bin": {
    "scaffold": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,md}\"",
    "check": "npm run lint && npm run format:check"
  },
  "keywords": [
    "cli",
    "generator",
    "scaffold",
    "oop",
    "dependency-injection",
    "node",
    "typescript",
    "objection",
    "mongoose",
    "knex",
    "express",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Trapintrovert/node-scaffold-cli"
  },
  "homepage": "https://github.com/Trapintrovert/node-scaffold-cli#readme",
  "bugs": {
    "url": "https://github.com/Trapintrovert/node-scaffold-cli/issues"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^8.2.5",
    "chalk": "^4.1.2",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/inquirer": "^8.2.10",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.3.3",
    "husky": "^9.0.0",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
